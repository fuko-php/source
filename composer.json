{
	"name": "fuko-php/source",
	"license": "MIT",
	"description": "Extracts chunks of source code identified by code references, e.g. filename + line",
	"keywords": ["source", "source-code", "fuko", "fuko-php"],
	"authors": [
		{
		"name": "Kaloyan Tsvetkov (KT)",
		"email": "kaloyan@kaloyan.info",
		"homepage": "http://kaloyan.info",
		"role": "Developer"
		}
	],

	"require": {
		"php": ">=7.1"
	},

	"autoload": {
		"psr-4": {
			"Fuko\\Source\\": "src/"
		}
	},

	"require-dev": {
		"phpunit/phpunit": "^7.5 || ^8.5"
	},

        "autoload-dev": {
		"psr-4": {
			"Fuko\\Source\\Tests\\": "tests/"
		}
        }
}
